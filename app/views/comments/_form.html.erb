<%= form_for(comment, remote: true) do |form| %>
  <div class="field">
    <%= form.label :comment_description %>
    <%= form.text_field :comment_description %>
  </div>

  <div class="field">
    <%= form.label :post_id %>
    <%= form.number_field :post_id, value:@post.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
